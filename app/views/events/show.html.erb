<h2 align="center">Title: <%= @event.event_name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
	<% if @event.user %>
	<ul class="listing">
		<div class="row center">
			<div class="col-md-4 col-md-offset-4">
				<li>Created by:</li>
				<li class="event-title">
				<%= link_to @event.user.username, user_path(@event.user) %>
				</li>
				<li><small>
				<%= pluralize(@event.user.events.count, "evento") if @event.user.events %>
				</small></li>
			</div>
		</div>
	</ul>
	<% end %>
	<hr>
	<div class="event-actions">
		<% if logged_in? && current_user == @event.user %>
		<%= link_to "Delete this event", event_path(@event), method: :delete,
		data: { confirm: "Are you sure you want to delete the event?"},
		class: "btn btn-xs btn-danger" %>
		<%= link_to "View all events", user_path(current_user), class: "btn btn-xs btn-success" %>
		<% end %>
	</div>
</div>