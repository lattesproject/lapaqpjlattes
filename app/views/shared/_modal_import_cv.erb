<!-- Modal -->
<div class="modal fade" id="modal-import-cv" tabindex="-1" role="dialog" aria-labelledby="modal-import-cvLabel" aria-hidden="true">
<div class="modal-dialog">
   <div class="modal-content">
      <div class="modal-header">
         <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
         <h4 class="modal-title" id="modal-import-cvLabel">Importar Currículo</h4>
      </div>
      <div class="modal-body">
         <div id="page-upload-1">
            <form method="post" id="cv_form" class="form" action="/candidates/process_cv">
               <div class="form-group">
                  <label for="cv_file">Currículo</label>
                  <input type="file" id="cv_file">
               </div>
               <div class="form-group">
                  <label for="evento">Evento</label>
                  <%= select("events", "event_id", Event.all.collect {|p| [ p.event_name, p.id ] }, {include_blank: 'Escolha o Evento'}, class:"form-control") %>
               </div>
            </form>
         </div>
      </div>
      <div class="modal-footer"> 
         <a href="" class="btn" data-dismiss="modal">Cancelar</a>
         <button form="cv_form" type="submit" class="btn btn-primary">Upload</button>
      </div>
   </div><!-- /.modal-content -->
</div><!-- /.modal-dia